{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**.csproj"
          ],
          "src": "../src",
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "GenFxTests/**"
          ]
        }
      ],
      "force": true,
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "cwd": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "**/*.md", "**/toc.yml" ]
      }
    ],
    "dest": "_site",
    "template": [
      "default"
    ]
  }
}